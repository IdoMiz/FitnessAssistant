<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mealCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/mealImageView"
            android:layout_width="106dp"
            android:layout_height="148dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_search_24"
            android:background="@drawable/rounded_image_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:hint="Food Name"
                android:inputType="text"
                android:text="Title: Pizza"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/readyInMinutesTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:hint="Ready in minutes"
                android:inputType="number"
                android:text="Ready in Minutes: 30"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/servingsTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:hint="Servings"
                android:inputType="number"
                android:text="Servings: 4"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/caloriesTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:hint="Calories"
                android:inputType="numberDecimal"
                android:text="Calories: 400"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
